<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="tsapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <form:SimpleForm>
            <form:content>
                <Label text="llalala"></Label>
                <Input
                    value="{
                    path: '/value1',
                    type: 'sap.ui.model.type.Integer'
                }"
                />
                <Label text="luli"></Label>
                <Input
                    value="{
                    path: '/value2',
                    type: 'sap.ui.model.type.Integer',
                    constraints: {
                        maximum: 5
                    }
                }"
                />
            </form:content>
        </form:SimpleForm>
        <footer>
            <OverflowToolbar>
                <Button
                    text="{messageHelperModel>/count}"
                    icon="{messageHelperModel>/buttonIcon}"
                    type="{messageHelperModel>/buttonType}"
                    press=".onPressPopBtn"
                />
                <ToolbarSpacer />
                <Button
                    text="generateMessages"
                    press=".generateMessages"
                />
                <ToolbarSpacer />
                <Button
                    text="openDialog"
                    press=".onPressDiaBtn"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
