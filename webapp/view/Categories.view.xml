<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="tsapp.controller.Categories"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <Table
            items="{appModel>/categories}"
            fixedLayout="false"
            sticky="ColumnHeaders,GroupHeaders,HeaderToolbar,InfoToolbar"
            itemPress=".onPressCategory"
            busy="{appModel>/categoryBusy}"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <SearchField search=".onSearchCatagory" />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Category" />
                </Column>
                <Column hAlign="End">
                    <Text text="Image" />
                </Column>
            </columns>
            <ColumnListItem type="Navigation">
                <ObjectIdentifier
                    title="{appModel>CategoryName} ({appModel>CategoryID})"
                    text="{appModel>Description}"
                />
                <Avatar
                    src="{path: 'appModel>Picture', formatter: '.formatImage'}"
                />
            </ColumnListItem>
        </Table>
    </Page>
</mvc:View>
